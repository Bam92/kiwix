CXX                = @CXX@
CPPFLAGS           = @CPPFLAGS@
CXXFLAGS           = @CXXFLAGS@
LDFLAGS            = @LDFLAGS@

GECKO_DEFINES      = @GECKO_DEFINES@
GECKO_IDL_INCLUDES = @GECKO_IDL_INCLUDES@
GECKO_INCLUDES     = @GECKO_INCLUDES@
GECKO_LDFLAGS      = @GECKO_LDFLAGS@
XPIDL              = @XPIDL@

all: IZeno.@LIBEXT@ IZeno.xpt

IZeno.h: IZeno.idl
	$(XPIDL) -m header $(GECKO_IDL_INCLUDES) IZeno.idl

IZeno.xpt: IZeno.idl
	$(XPIDL) -m typelib $(GECKO_IDL_INCLUDES) IZeno.idl

IZeno.@LIBEXT@: zenocomponent.cpp IZeno.h
	$(CXX) -o IZeno.@LIBEXT@ $(GECKO_DEFINES) $(GECKO_INCLUDES) \
		$(CPPFLAGS) $(CXXFLAGS) zenocomponent.cpp @LIBS@ \
		$(LDFLAGS) $(GECKO_LDFLAGS)
	chmod +x IZeno.@LIBEXT@

clean:
	rm -f *.o *.~ *.xpt *.@LIBEXT@ test

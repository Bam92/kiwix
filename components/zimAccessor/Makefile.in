CXX                = @CXX@
CPPFLAGS           = @CPPFLAGS@
CXXFLAGS           = @CXXFLAGS@
LDFLAGS            = @LDFLAGS@

GECKO_DEFINES      = @GECKO_DEFINES@
GECKO_IDL_INCLUDES = @GECKO_IDL_INCLUDES@
GECKO_INCLUDES     = @GECKO_INCLUDES@
GECKO_LDFLAGS      = @GECKO_LDFLAGS@
XPIDL              = @XPIDL@

all: zimAccessor.@LIBEXT@ zimAccessor.xpt

IZimAccessor.h: IZimAccessor.idl
	$(XPIDL) -m header $(GECKO_IDL_INCLUDES) IZimAccessor.idl

zimAccessor.xpt: IZimAccessor.idl
	$(XPIDL) -m typelib $(GECKO_IDL_INCLUDES) IZimAccessor.idl
	mv IZimAccessor.xpt zimAccessor.xpt

zimAccessor.@LIBEXT@: zimAccessor.cpp IZimAccessor.h
	$(CXX) -o zimAccessor.@LIBEXT@ $(GECKO_DEFINES) $(GECKO_INCLUDES) \
		$(CPPFLAGS) $(CXXFLAGS) zimAccessor.cpp @LIBS@ \
		$(LDFLAGS) $(GECKO_LDFLAGS)
	chmod +x zimAccessor.@LIBEXT@

clean:
	rm -f *.o *~ *.xpt *.@LIBEXT@

CXX                = @CXX@
CPPFLAGS           = @CPPFLAGS@
CXXFLAGS           = @CXXFLAGS@
LDFLAGS            = @LDFLAGS@

GECKO_DEFINES      = @GECKO_DEFINES@
GECKO_IDL_INCLUDES = @GECKO_IDL_INCLUDES@
GECKO_INCLUDES     = @GECKO_INCLUDES@
GECKO_LDFLAGS      = @GECKO_LDFLAGS@
XPIDL              = @XPIDL@

all: zenoAccessor.@LIBEXT@ zenoAccessor.xpt

zenoAccessor.h: IZenoAccessor.idl
	$(XPIDL) -m header $(GECKO_IDL_INCLUDES) IZenoAccessor.idl

zenoAccessor.xpt: IZenoAccessor.idl
	$(XPIDL) -m typelib $(GECKO_IDL_INCLUDES) IZenoAccessor.idl
	mv IZenoAccessor.xpt zenoAccessor.xpt

zenoAccessor.@LIBEXT@: zenoAccessor.cpp IZenoAccessor.h
	$(CXX) -o zenoAccessor.@LIBEXT@ $(GECKO_DEFINES) $(GECKO_INCLUDES) \
		$(CPPFLAGS) $(CXXFLAGS) zenoAccessor.cpp @LIBS@ \
		$(LDFLAGS) $(GECKO_LDFLAGS)
	chmod +x zenoAccessor.@LIBEXT@

clean:
	rm -f *.o *~ *.xpt *.@LIBEXT@

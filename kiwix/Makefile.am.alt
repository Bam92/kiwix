SUBDIRS=chrome defaults components

add_SCRIPTS=kiwix-compact
adddir=$(DESTDIR)$(bindir)

inidir=$(DESTDIR)$(pkglibdir)
ini_DATA=application.ini chrome.manifest

launcherdir=$(DESTDIR)$(pkglibdir)
launcher_SCRIPTS=kiwix

install-exec-hook:
	-ln -s -f $(launcherdir)/kiwix $(DESTDIR)$(bindir)/kiwix

uninstall-hook:
	-rm $(DESTDIR)$(bindir)/kiwix